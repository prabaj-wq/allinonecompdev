# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# CORS Configuration
# For development (allows all origins):
# CORS_ORIGINS=*

# For production (specify allowed origins):
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# For GitHub Codespaces (example):
# CORS_ORIGINS=https://your-codespace-name-3000.app.github.dev,https://your-codespace-name-80.app.github.dev

# For Netlify/Vercel (example):
# CORS_ORIGINS=https://your-app.netlify.app,https://your-app.vercel.app

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/epm_tool
POSTGRES_HOST=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=epm_tool
POSTGRES_PORT=5432

# Security
SECRET_KEY=your-secret-key-change-in-production
SESSION_SECRET_KEY=your-session-secret-key
SECURE_COOKIES=false

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@yourdomain.com
EMAILS_FROM_NAME=Your App Name

# Redis (optional)
REDIS_URL=redis://localhost:6379/0
